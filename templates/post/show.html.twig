{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('post_index') }}">Back</a>

    <a class="btn btn-warning" href="{{ path('post_edit', {'id': post.id}) }}">Edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
