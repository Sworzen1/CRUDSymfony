        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('user_index') }}">Back</a>

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
